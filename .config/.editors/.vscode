{
  // Optimized Font and Text Visibility Settings
  "editor.fontFamily": "'JetBrainsMonoNL Nerd Font', 'Source Code Pro', monospace",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.6,
  "editor.fontWeight": "400",
