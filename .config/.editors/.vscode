  "extensions.autoUpdate": true,

  // ESLint Configuration (following standardjs.com)
  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.format.enable": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },

  "python.analysis.autoFormatStrings": true,
  "python.linting.enabled": false,
  "python.analysis.typeCheckingMode": "standard",
  "python.formatting.provider": "none",

  "python.analysis.fixAll": [
    "source.unusedImports",
    "source.convertImportFormat"
  ],

  "python.analysis.autoImportUserSymbols": true,
  "python.analysis.importFormat": "absolute",
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.functionReturnTypes": true,

  // Rust Analyzer Configuration - Official Style Guide Enhanced
  // Based on: https://doc.rust-lang.org/beta/style-guide/index.html
  "rust-analyzer.cargo.loadOutDirsFromCheck": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.check.allTargets": true,
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.inlayHints.typeHints.enable": true,
  "rust-analyzer.inlayHints.parameterHints.enable": true,
  "rust-analyzer.inlayHints.chainingHints.enable": true,
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.lens.references.adt.enable": true,
  "rust-analyzer.lens.references.method.enable": true,
  "rust-analyzer.imports.group.enable": true,
  "rust-analyzer.imports.prefix": "by_crate",
  "rust-analyzer.completion.addCallParenthesis": true,
  "rust-analyzer.hover.actions.enable": true,
  "rust-analyzer.diagnostics.enable": true,
  "rust-analyzer.cargo.features": "all",

  // C++ Configuration (following Google C++ Style Guide)
  "C_Cpp.clang_format_fallbackStyle": "Google",
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.runAutomatically": true,
  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.default.cStandard": "c17",

  // Java Language Server Configuration - Industry Standards
  // Based on: Google Java Style, Oracle conventions, JavaSpring practices
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "java.format.settings.profile": "GoogleStyle",
  "java.compile.nullAnalysis.mode": "automatic",
  "java.saveActions.organizeImports": true,
  "java.sources.organizeImports.starThreshold": 5,
  "java.sources.organizeImports.staticStarThreshold": 3,
  "java.completion.enabled": true,
  "java.completion.overwrite": true,
  "java.completion.guessMethodArguments": true,
  "java.completion.favoriteStaticMembers": [
    "org.junit.Assert.*",
    "org.junit.Assume.*",
    "org.junit.jupiter.api.Assertions.*",
    "org.junit.jupiter.api.Assumptions.*",
    "org.junit.jupiter.api.DynamicContainer.*",
    "org.junit.jupiter.api.DynamicTest.*",
    "org.mockito.Mockito.*",
    "org.mockito.ArgumentMatchers.*"
  ],
  "java.codeGeneration.insertionLocation": "afterCursor",
  "java.codeGeneration.toString.template": "${object.className} [${member.name()}=${member.value}, ${otherMembers}]",
  "java.diagnostics.updateBuildConfiguration": "automatic",
  "prettier.configPath": "./.prettierrc",

  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.rulers": [80, 120],
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },

  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.rulers": [80, 120],
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },

  "[php]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.rulers": [120],
    "editor.insertSpaces": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },

  "[html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[css]": {
    "editor.tabSize": 2
  },

  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnSave": true,
    "editor.rulers": [79, 99],
    "editor.wordWrapColumn": 79,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },

  "[json]": {
    "editor.tabSize": 2
  },

  "[markdown]": {
    "editor.tabSize": 2
  },

  // Rust Configuration - Official Rust Style Guide Compliant
  // Based on: https://doc.rust-lang.org/beta/style-guide/index.html
  // Key Standards: 4 spaces, 100 char width, block indent, trailing commas
  "[rust]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.rulers": [100],
    "editor.wordWrapColumn": 100,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },

  // Java Configuration - Industry Standards Compliant
  // Based on: Google Java Style, Oracle conventions, JavaSpring best practices
  // Key Standards: 4 spaces, camelCase methods, PascalCase classes, Javadoc comments
  "[java]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.rulers": [80, 100],
    "editor.wordWrapColumn": 100,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },

  "[c]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.rulers": [80],
    "editor.insertSpaces": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },

  "[cpp]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.rulers": [80],
    "editor.insertSpaces": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },

  // R Configuration - Based on Google Style Guide and R-bloggers recommendations
  // https://web.stanford.edu/class/cs109l/unrestricted/resources/google-style.html
  // https://www.r-bloggers.com/2019/01/%F0%9F%96%8A-r-coding-style-guide/
  "[r]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": null,
    "editor.insertSpaces": true,
    "editor.rulers": [80],
    "editor.wordWrapColumn": 80,
    "editor.formatOnSave": true,
    "editor.detectIndentation": false
  },

  "r.rpath.linux": "/usr/bin/R",
  "r.bracketedPaste": true,
  "r.sessionWatcher": true,
  "r.alwaysUseActiveTerminal": true,
  "r.lsp.diagnostics": true,
  "r.lsp.enabled": true,
  "r.linting.enable": true,
  "r.linting.lintr.linters": "linters_with_defaults(line_length_linter(80), indentation_linter(2), assignment_linter(), camel_case_linter=NULL, snake_case_linter())",

  "[assembly]": {
    "editor.tabSize": 8
  },

  "[kotlin]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true
  },

  "[latex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },

  "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],
  "jupyter.alwaysTrustNotebooks": true,
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  "jupyter.enableNativeInteractiveWindow": true,
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "jupyter.generateSVGPlots": true,
  "jupyter.enablePlotViewer": true,

  // "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.message.warning.show": false,
  "latex-workshop.message.error.show": false,
  "latex-workshop.latex.autoBuild.run": "onFileChange",
  "latex-workshop.latex.outDir": "%DIR%/out",
  "latex-workshop.view.pdf.ref.viewer": "auto",

  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex",
      "tools": ["xelatex"]
    },

    {
      "name": "latexmk",
      "tools": ["latexmk"]
    },

    {
      "name": "pdflatex -> bibtex -> pdflatex*2",
      "tools": ["pdflatex", "bibtex", "pdflatex", "pdflatex"]
    },

    {
      "name": "xelatex",
      "tools": ["xelatex"]
    }
  ],

  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-shell-escape",
        "-output-directory=out",
        "%DOC%"
      ]
    },

    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ]
    },

    {
      "name": "bibtex",
      "command": "bibtex",
      "args": ["%DOCFILE%"]
    },

    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-shell-escape",
        "-output-directory=%DIR%/out",
        "%DOC%"
      ]
    }
  ],

  "latex-workshop.synctex.synctexjs.enabled": true,

