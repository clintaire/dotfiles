{
  "telemetry.telemetryLevel": "crash",
  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 1000,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.fontFamily": "'Fira Code', 'JetBrains Mono', 'Menlo', monospace",
  // "editor.fontWeight": "400",

  // Enable font ligatures
  "editor.fontLigatures": "true",
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.scale": 2,
  "editor.minimap.maxColumn": 120,
  "editor.minimap.size": "fit",

  "editor.tokenColorCustomizations": {
    "comments": "#787878", // JetBrains-style comments

    "textMateRules": [
      {
        "scope": ["entity.name.tag", "punctuation.definition.tag"],
        "settings": {
          "foreground": "#cc7832" // Orange for tags
        }
      },

      {
        "scope": ["entity.other.attribute-name"],
        "settings": {
          "foreground": "#ff8f8f" // Violet for attributes
        }
      },

      {
        "scope": ["string"],
        "settings": {
          "foreground": "#6a8759" // Green for strings
        }
      },

      {
        "scope": ["keyword", "storage.type", "storage.modifier"],
        "settings": {
          "foreground": "#cc7832" // Orange for keywords
        }
      },

      {
        "scope": ["variable", "support.variable"],
        "settings": {
          "foreground": "#a9b7c6" // Default text color for variables
        }
      },

      {
        "scope": ["constant.numeric"],
        "settings": {
          "foreground": "#6897bb" // Blue for numeric constants
        }
      }
    ]
  },

  "editor.fontSize": 15.0,

  "workbench.colorCustomizations": {
    // Main UI elements
    "activityBar.background": "#1e1f22",
    "activityBar.foreground": "#ffa500",
    "activityBar.activeBorder": "#000000f8",
    "activityBar.activeBackground": "#34343531",
    "titleBar.activeBackground": "#1c1c1e",
    "statusBar.background": "#1e1f22",
    "statusBar.foreground": "#d4d4d4",

    // Sidebars
    "sideBar.background": "#1e1f22",
    "sideBar.foreground": "#a9b7c6",
    "sideBar.dropBackground": "#2b1414",
    "sideBarTitle.foreground": "#a9b7c6",

    // Input Controls
    "input.background": "#1e1f22",
    "input.border": "#1e1f22",
    "input.foreground": "#a9b7c6",

    // Peek Views
    "peekViewEditor.background": "#1a1414",
    "peekViewResult.background": "#282a36",
    "peekView.border": "#1e1f22",

    // Badges
    "activityBarBadge.foreground": "#ffb900",
    "activityBarBadge.background": "#353535",
    "activityWarningBadge.foreground": "#f31199",
    "activityWarningBadge.background": "#353535",
    "activityErrorBadge.foreground": "#f10f0f",
    "activityErrorBadge.background": "#353535",

    // Editor
    "editor.background": "#1e1f22",
    "editor.foreground": "#a9b7c6",
    "editor.selectionBackground": "#313c3c",
    "editor.selectionForeground": "#d4d4d4",
    "editor.selectionHighlightBackground": "#4b222200",
    "editor.lineHighlightBackground": "#0d111766",
    "editor.lineHighlightBorder": "#00000000",
    "editorHoverWidget.background": "#1e1f22fb",
    "editorHoverWidget.border": "#ff8c0066",
    "editorCursor.foreground": "#cc7832",
    "editorCursor.background": "#ffffffa5",
    "editorMultiCursor.primary.foreground": "#cc7832",
    "terminalCursor.foreground": "#cc7832",

    // Breadcrumbs
    "breadcrumb.foreground": "#a9b7c6",
    "breadcrumb.background": "#1e1f22",
    "breadcrumb.focusForeground": "#cc7832",
    "breadcrumb.activeSelectionForeground": "#ff6b6b",
    "breadcrumbPicker.background": "#1a1414",

    // Snippets
    "editor.snippetTabstopHighlightBackground": "#4b2222",
    "editor.snippetTabstopHighlightBorder": "#cc7832",
    "editor.snippetFinalTabstopHighlightBackground": "#ff6b6b",
    "editor.snippetFinalTabstopHighlightBorder": "#cc7832",

    // Settings
    "settings.dropdownBackground": "#1e1f22",
    "settings.dropdownForeground": "#a9b7c6",
    "settings.dropdownBorder": "#ff8c0066",
    "settings.dropdownListBorder": "#ff8c0066",
    "settings.checkboxBackground": "#1e1f22",
    "settings.checkboxForeground": "#a9b7c6",
    "settings.checkboxBorder": "#ff8c0066",
    "settings.rowHoverBackground": "#25272b",
    "settings.textInputBackground": "#1e1f22",
    "settings.textInputForeground": "#a9b7c6",
    "settings.textInputBorder": "#ff8c0066",
    "settings.numberInputBackground": "#1e1f22",
    "settings.numberInputForeground": "#a9b7c6",
    "settings.numberInputBorder": "#ff8c0066",
    "settings.focusedRowBackground": "#2c2f33",
    "settings.focusedRowBorder": "#ff8c0066",
    "settings.headerForeground": "#ffa500",
    "settings.modifiedItemIndicator": "#ff4500",
    "settings.headerBorder": "#ff8c0066",
    "settings.sashBorder": "#3a3d41",
    "settings.settingsHeaderHoverForeground": "#ffd700",

    // Scrollbars
    "scrollbarSlider.background": "#ffffff20",
    "scrollbarSlider.hoverBackground": "#ff6b6b30",
    "scrollbarSlider.activeBackground": "#ff6b6b50",

    // Editor Ruler
    "editorRuler.foreground": "#524e4eb7"
  },

  "workbench.editor.enablePreview": false,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorWidth": 2,
  "editor.guides.indentation": true,
  "editor.guides.bracketPairs": true, // Only highlight active bracket pair
  "editor.bracketPairColorization.enabled": true,
  "editor.renderLineHighlight": "all",
  "editor.occurrencesHighlight": "singleFile",
  "editor.smoothScrolling": true,
  "editor.mouseWheelScrollSensitivity": 1.5,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "line",
  "terminal.integrated.customGlyphs": false,
  "terminal.integrated.enableVisualBell": false,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.gpuAcceleration": "auto",
  "terminal.integrated.minimumContrastRatio": 4.5,
  "terminal.integrated.defaultProfile.osx": "zsh",

  "git.enableCommitSigning": true,
  "git.confirmSync": false,
  "git.gpgSign": true,
  "git.useEditorAsCommitInput": false,
  "git.useIntegratedTerminal": true,
  "git.autofetch": true,
  "git.autofetchPeriod": 180,
  "git.submitSignoff": true,
  "git.enableSmartCommit": true,
  "git.autoStash": true,

  // MacOS GPG Path
  "git.gpgPath": "/opt/homebrew/bin/gpg",

  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "flake8",
  "python.formatting.blackPath": "black",
  "python.formatting.blackArgs": ["--line-length", "88"],
  "python.sortImports.args": ["--profile", "black"],
  "rust-analyzer.cargo.loadOutDirsFromCheck": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "C_Cpp.clang_format_fallbackStyle": "Google",
  "C_Cpp.clang_format_style": "file",
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "java.format.settings.profile": "GoogleStyle",

  // Language-specific settings

  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode", // Let project settings define formatter
    "editor.formatOnSave": true
  },

  "[html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[css]": {
    "editor.tabSize": 2
  },

  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },

  "[json]": {
    "editor.tabSize": 2
  },

  "[markdown]": {
    "editor.tabSize": 2
  },

  "[rust]": {
    "editor.tabSize": 4
  },

  "[java]": {
    "editor.tabSize": 4
  },

  "[c]": {
    "editor.tabSize": 4
  },

  "[cpp]": {
    "editor.tabSize": 4
  },

  "[r]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "REditorSupport.r"
  },

  "[assembly]": {
    "editor.tabSize": 8
  },

  "[kotlin]": {
    "editor.tabSize": 4
  },

  "[latex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Jupyter settings

  "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],
  "jupyter.experiments.enabled": false,
  "jupyter.alwaysTrustNotebooks": true,
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  "jupyter.enableNativeInteractiveWindow": true,
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,

  // Jupyter workspace settings

  "jupyter.generateSVGPlots": true,
  "jupyter.enablePlotViewer": true,

  // LaTeX Workshop settings

  // "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.message.warning.show": false,
  "latex-workshop.message.error.show": false,
  "latex-workshop.latex.autoBuild.run": "onFileChange",
  "latex-workshop.latex.outDir": "%DIR%/out",
  "latex-workshop.view.pdf.ref.viewer": "auto",

  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex",
      "tools": ["xelatex"]
    },

    {
      "name": "latexmk",
      "tools": ["latexmk"]
    },

    {
      "name": "pdflatex -> bibtex -> pdflatex*2",
      "tools": ["pdflatex", "bibtex", "pdflatex", "pdflatex"]
    },

    {
      "name": "xelatex",
      "tools": ["xelatex"]
    }
  ],

  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-shell-escape",
        "-output-directory=out",
        "%DOC%"
      ]
    },

    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ]
    },

    {
      "name": "bibtex",
      "command": "bibtex",
      "args": ["%DOCFILE%"]
    },

    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-shell-escape",
        "-output-directory=%DIR%/out",
        "%DOC%"
      ]
    }
  ],

  "latex-workshop.synctex.synctexjs.enabled": true,

  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.snm",
    "*.synctex(busy)",
    "*.synctex.gz(busy)",
    "*.nav",
    "*.vrb",
    ".aux",
    ".bbl",
    ".blg",
    ".idx",
    ".ind",
    ".lof",
    ".lot",
    ".out",
    ".toc",
    ".acn",
    ".acr",
    ".alg",
    ".glg",
    ".glo",
    ".gls",
    ".fls",
    ".log",
    ".fdb_latexmk",
    ".snm",
    ".synctex(busy)",
    ".synctex.gz(busy)",
    ".nav",
    "*.vrb"
  ],

  "latex-workshop.message.update.show": false,

  "latex-workshop.intellisense.package.enabled": true,

  "latex-workshop.intellisense.package.dirs": [
    "./texmf/tex/latex",
    "./texmf/bibtex/bst"
  ],

  "latex-workshop.intellisense.label.enabled": true,
  "latex-workshop.intellisense.citation.enabled": true,
  "latex-workshop.intellisense.citation.format": ["cite"],
  "latex-workshop.latex.clean.enabled": true,
  "latex-workshop.latex.build.enabled": false,
  "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
  "latex-workshop.view.pdf.internal.port": 8085,
  "latex-workshop.view.pdf.internal.synctex": true,
  "latex-workshop.latex.watch.usePolling": true,
  "latex-workshop.synctex.afterBuild.enabled": true,
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.subfolder.enabled": true,
  "latex-workshop.view.pdf.internal.autoRefresh": true,
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.pdf.internal.enabled": true,
  "latex-workshop.view.pdf.internal.continuous": true,
  "latex-workshop.latex.watch.delay": 50,
  "latex-workshop.view.pdf.refresh.method": "build",
  "latex-workshop.latex.autoBuild.interval": 200,
  "latex-workshop.latex.autoBuild.onFileChange.enabled": true,

  "latex-workshop.latex.watch.files.ignore": [
    "**/*.git/**",
    "**/build/**",
    "**/node_modules/**",
    "**/out/**",
    "/*.git/",
    "/build/",
    "/out/",
    "/node_modules/"
  ],

  "latex-workshop.view.pdf.backgroundColor": "#ffffff",
  "latex-workshop.view.pdf.zoom": "auto",

  "latex-workshop.view.pdf.color.light.pageColorsForeground": "",
  "latex-workshop.view.pdf.color.light.pageColorsBackground": "",
  "latex-workshop.view.pdf.color.light.pageBorderColor": "lightgrey",

  "latex-workshop.view.pdf.color.dark.pageColorsForeground": "",
  "latex-workshop.view.pdf.color.dark.pageColorsBackground": "",
  "latex-workshop.view.pdf.color.dark.pageBorderColor": "darkgrey",

  "latex-workshop.view.pdf.internal.path": "%DIR%/out/%DOCFILE%.pdf",

  // IntelliCode settings

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "vsintellicode.features.python.deepLearning": "enabled",
  "python.defaultInterpreterPath": "~/.python-global/global-env/bin/python3",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  "python.analysis.extraPaths": [
    "~/Obsidian/clintaire/Notebooks",
    "~/Obsidian/clintaire/Notebooks/math/python",
    "${workspaceFolder}/Python/Maths"
  ],

  // Python scientific computing

  "python.dataScience.sendSelectionToInteractiveWindow": true,
  "python.dataScience.allowLiveShare": true,

  // Enhanced JavaScript/TypeScript

  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.completeFunctionCalls": true,

  // Better Git experience

  "git.pruneOnFetch": true,

  // Pylance settings

  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoImportCompletions": true,

  // Markdown lint settings

  "markdownlint.config": {
    "default": true,
    "MD024": false,
    "MD025": false
  },

  // Markdown math support

  "markdown.preview.breaks": true,
  "markdown.preview.typographer": true,
  "markdown.math.enabled": true,

  // SQL Tools settings

  "sqltools.useNodeRuntime": true,

  "sqltools.formatOptions": {
    "language": "sql",
    "uppercase": true
  },

  // Better font rendering

  "workbench.fontAliasing": "antialiased",

  // Enhanced debugging experience

  "debug.inlineValues": "on",
  "debug.toolBarLocation": "floating",
  "debug.console.fontSize": 14,
  "debug.showInStatusBar": "always",
  "debug.terminal.clearBeforeReusing": true,

  // Better terminal integration

  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.tabs.enableAnimation": false,

  // Improved search experience

  "search.smartCase": true,
  "search.useGlobalIgnoreFiles": true,
  "search.useParentIgnoreFiles": true,

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/env": true,
    "**/venv": true,
    "**/.git": true,
    "**/*.min.*": true
  },

  // Enhanced workspace search

  "search.followSymlinks": false,

  // Workspace optimization

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/output": false,
    "**/target": true,
    "**/*.class": true,
    "**/*.o": true,
    "**/.idea": true,
    "**/.vscode": false,
    "**/*.dll": true,
    "**/*.exe": true,
    "**/*.so": true,
    "**/*.dylib": true,
    "**/*.jar": true,
    "**/*.war": true,
    "**/.vscode-test": true,
    "**/.gradle": true,
    "**/.mvn": true,
    "**/build": true,
    "**/.tox": true,
    "**/venv": true
  },

  // Better error handling

  "problems.showCurrentInStatus": true,
  "problems.decorations.enabled": true,

  // Improved suggestions

  "editor.suggestSelection": "first",
  "editor.suggestOnTriggerCharacters": true, // Reduce automatic suggestions
  "editor.suggest.preview": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.showStatusBar": true,
  "editor.acceptSuggestionOnEnter": "smart",

  // Enhanced productivity features

  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },

  "files.trimTrailingWhitespace": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "diffEditor.maxComputationTime": 5000,

  // Better workspace navigation

  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.tree.indent": 20,
  "workbench.tree.renderIndentGuides": "always",
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,

  // Live Server settings

  "liveServer.settings.port": 5500, // Change default port

  "liveServer.settings.https": {
    "enable": false,
    "cert": "",
    "key": "",
    "passphrase": ""
  },

  "liveServer.settings.host": "localhost",
  "liveServer.settings.NoBrowser": false,
  "liveServer.settings.fullReload": true,
  "liveServer.settings.wait": 100,
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": true,
  "editor.inlayHints.enabled": "on",

  // R settings

  "r.plot.useHttpgd": true,
  "r.plot.location": "viewer",
  "r.bracketedPaste": true,
  "r.sessionWatcher": true,
  "r.workspace.remove.hidden": true,
  "r.alwaysUseActiveTerminal": true,
  "r.helpPanel.enableHoverLinks": true,
  "r.help.pdfViewer": "browser",

  // Rust math settings

  "rust-analyzer.cargo.features": ["nalgebra", "ndarray"],
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/**",
    "/opt/homebrew/include",
    "/usr/local/opt/eigen/include/eigen3",
    "${workspaceFolder}/C/includes"
  ],
  "java.project.referencedLibraries": [
    "lib/**/*.jar",
    "${workspaceFolder}/lib/commons-math3-3.6.1.jar"
  ],

  // Testing frameworks

  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,

  "java.test.config": {
    "workingDirectory": "${workspaceFolder}/Java/Daily",
    "vmargs": ["-Xmx512M"]
  },

  // Editor appearance

  "editor.rulers": [100],
  "editor.renderWhitespace": "selection",
  "editor.semanticHighlighting.enabled": true,

  // Performance optimizations

  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": false,

  "workbench.list.smoothScrolling": true,

  "files.watcherExclude": {
    "**/node_modules/*/**": true,
    "**/env/*/**": true,
    "**/venv/*/**": true,
    "**/.git/objects/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/target/**": true,
    "**/.gradle/**": true,
    "**/tmp/**": true,
    "**/.next/**": true,
    "**/coverage/**": true
  },

  "editor.guides.highlightActiveIndentation": true,

  "editor.bracketPairs.independentColorPoolPerBracketType": true,

  // Better Terminal Experience

  "terminal.integrated.enablePersistentSessions": true,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.scrollback": 5000,

  // Improved Git Workflow

  "git.mergeEditor": true,
  "git.openRepositoryInParentFolders": "always",
  "git.useIntegratedAskPass": true,
  "git.terminalAuthentication": true,

  // Better Search and Navigation

  "search.sortOrder": "modified",
  "workbench.editor.splitInGroupLayout": "horizontal",
  "workbench.editor.preferredSideForDiffs": "right",

  // Enhanced Debugging

  "debug.autoExpandLazyVariables": "on",
  "debug.javascript.autoAttachFilter": "smart",

  // Language Server Optimizations

  "python.analysis.indexing": true,
  "typescript.tsserver.maxTsServerMemory": 3072,

  // Better Error Lens Integration

  "errorLens.enabled": true,
  "errorLens.enabledInMergeConflict": true,

  // Modern UI Features

  "workbench.tree.expandMode": "doubleClick",
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,

  // Enhanced Testing

  "testing.automaticallyOpenPeekView": "failureAnywhere",
  "testing.followRunningTest": true,

  // AI Assistance

  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false
  },

  // Navigation

  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",

  // Language Specific

  "typescript.preferences.importModuleSpecifier": "shortest",
  "javascript.preferences.importModuleSpecifier": "shortest",

  // Performance Improvements

  "workbench.reduceMotion": "on",
  "editor.scrollBeyondLastLine": false,
  "workbench.list.horizontalScrolling": true,
  "files.restoreUndoStack": false,
  "workbench.enableExperiments": false,

  // Enhanced Development Features

  "editor.suggest.insertMode": "replace",
  "editor.suggest.filterGraceful": true,
  "editor.suggest.localityBonus": true,

  // Testing Enhancements

  "testing.saveBeforeTest": true,
  "testing.gutterEnabled": true,

  // Security Features

  "security.workspace.trust.enabled": true,
