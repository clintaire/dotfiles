{
  "editor.fontFamily": "Luxi Mono",
  "editor.lineHeight": 24,
  "editor.fontWeight": "400",
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 1,
  "editor.renderWhitespace": "selection",
  "editor.renderControlCharacters": true,
  "editor.rulers": [80],
  "editor.renderLineHighlight": "all",
  "editor.scrollBeyondLastLine": false,

  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  "editor.wrappingIndent": "same",
  "editor.autoIndent": "full",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },

  "editor.codeLens": true,
  "editor.hover.enabled": true,
  "editor.suggestSelection": "first",
  "editor.fontLigatures": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.minimap.scale": 2,
  "editor.minimap.maxColumn": 120,

  "extensions.ignoreRecommendations": true,
  "workbench.editor.enablePreview": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.guides.indentation": true,
  "editor.guides.bracketPairs": true,
  "editor.occurrencesHighlight": "singleFile",
  "editor.smoothScrolling": true,
  "editor.mouseWheelScrollSensitivity": 1.5,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "line",
  "terminal.integrated.customGlyphs": false,
  "terminal.integrated.enableVisualBell": false,
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.6,
  "terminal.integrated.fontFamily": "Luxi Mono",
  "terminal.integrated.gpuAcceleration": "auto",
  "terminal.integrated.minimumContrastRatio": 4.5,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "git.enableCommitSigning": true,
  "git.confirmSync": false,
  "git.useEditorAsCommitInput": false,
  "git.autofetchPeriod": 180,
  "git.enableSmartCommit": true,
  "git.autoStash": true,
  "git.autoRepositoryDetection": "openEditors",

  "extensions.autoUpdate": true,
  "eslint.enable": true,

  "eslint.run": "onType",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "rust-analyzer.procMacro.enable": true,
  "C_Cpp.clang_format_style": "file",

  "prettier.configPath": "./.prettierrc",

  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "[html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[css]": {
    "editor.tabSize": 2
  },

  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },

  "[json]": {
    "editor.tabSize": 2
  },

  "[markdown]": {
    "editor.tabSize": 2
  },

  "[rust]": {
    "editor.tabSize": 4
  },

  "[c]": {
    "editor.tabSize": 4
  },

  "[cpp]": {
    "editor.tabSize": 4
  },

  "[r]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[assembly]": {
    "editor.tabSize": 8
  },

  "[kotlin]": {
    "editor.tabSize": 4
  },

  "[latex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],
  "jupyter.experiments.enabled": false,
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,

  // "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.message.warning.show": false,
  "latex-workshop.message.error.show": false,
  "latex-workshop.latex.autoBuild.run": "onFileChange",
  "latex-workshop.latex.outDir": "%DIR%/out",
  "latex-workshop.view.pdf.ref.viewer": "auto",

  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex",
      "tools": ["xelatex"]
    },

    {
      "name": "latexmk",
      "tools": ["latexmk"]
    },

    {
      "name": "pdflatex -> bibtex -> pdflatex*2",
      "tools": ["pdflatex", "bibtex", "pdflatex", "pdflatex"]
    },

    {
      "name": "xelatex",
      "tools": ["xelatex"]
    }
  ],

  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-shell-escape",
        "-output-directory=out",
        "%DOC%"
      ]
    },

    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ]
    },

    {
      "name": "bibtex",
      "command": "bibtex",
      "args": ["%DOCFILE%"]
    },

    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-shell-escape",
        "-output-directory=%DIR%/out",
        "%DOC%"
      ]
    }
  ],

  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.snm",
    "*.synctex(busy)",
    "*.synctex.gz(busy)",
    "*.nav",
    "*.vrb",
    ".aux",
    ".bbl",
    ".blg",
    ".idx",
    ".ind",
    ".lof",
    ".lot",
    ".out",
    ".toc",
    ".acn",
    ".acr",
    ".alg",
    ".glg",
    ".glo",
    ".gls",
    ".fls",
    ".log",
    ".fdb_latexmk",
    ".snm",
    ".synctex(busy)",
    ".synctex.gz(busy)",
    ".nav",
    "*.vrb"
  ],

  "latex-workshop.intellisense.package.enabled": true,
  "latex-workshop.intellisense.package.dirs": [
    "./texmf/tex/latex",
    "./texmf/bibtex/bst"
  ],

  "latex-workshop.intellisense.citation.format": ["cite"],
  "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
  "latex-workshop.view.pdf.internal.port": 8085,
  "latex-workshop.synctex.afterBuild.enabled": true,
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.subfolder.enabled": true,
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.watch.delay": 50,
  "latex-workshop.latex.autoBuild.interval": 200,

  "latex-workshop.latex.watch.files.ignore": [
    "**/*.git/**",
    "**/build/**",
    "**/node_modules/**",
    "**/out/**",
    "/*.git/",
    "/build/",
    "/out/",
    "/node_modules/"
  ],

  "latex-workshop.view.pdf.zoom": "auto",
  "latex-workshop.view.pdf.color.light.pageColorsForeground": "",
  "latex-workshop.view.pdf.color.light.pageColorsBackground": "",
  "latex-workshop.view.pdf.color.light.pageBorderColor": "lightgrey",
  "latex-workshop.view.pdf.color.dark.pageColorsForeground": "",
  "latex-workshop.view.pdf.color.dark.pageColorsBackground": "",
  "latex-workshop.view.pdf.color.dark.pageBorderColor": "darkgrey",
  "python.defaultInterpreterPath": "~/.python-global/global-env/bin/python3",

  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "workspace",

  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.completeFunctionCalls": true,
  "git.pruneOnFetch": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoImportCompletions": true,
  "markdown.preview.breaks": true,
  "markdown.preview.typographer": true,
  "markdown.math.enabled": true,
  "debug.inlineValues": "on",
  "debug.toolBarLocation": "floating",
  "debug.console.fontSize": 14,
  "debug.showInStatusBar": "always",
  "debug.terminal.clearBeforeReusing": true,
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.tabs.enableAnimation": false,
  "search.smartCase": true,
  "search.useGlobalIgnoreFiles": true,
  "search.useParentIgnoreFiles": true,

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/env": true,
    "**/venv": true,
    "**/__pycache__": true,
    "**/dist": true,
    "**/build": true,
    "**/target": true,
    "**/.cache": true,
    "**/coverage": true,
    "**/output": true,
    "**/.gradle": true,
    "**/.mvn": true,
    "**/.next": true,
    "**/.nuxt": true,
    "**/.svelte-kit": true,
    "**/*.min.*": true,
    "**/.git": true,
    "**/tmp": true,
    "**/.docker": true,
    "**/.kube": true
  },

  "search.followSymlinks": false,

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/build": true,
    "**/target": true,
    "**/output": true,
    "**/__pycache__": true,
    "**/*.class": true,
    "**/*.o": true,
    "**/*.dll": true,
    "**/*.exe": true,
    "**/*.so": true,
    "**/*.dylib": true,
    "**/*.jar": true,
    "**/*.war": true,
    "**/env": true,
    "**/venv": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings/": true,
    "**/.next": true,
    "**/.nuxt": true,
    "**/.svelte-kit": true,
    "**/.docker": true,
    "**/.kube": true,
    "**/.idea": true,
    "**/.gradle": true,
    "**/.mvn": true
  },

  "problems.showCurrentInStatus": true,
  "problems.decorations.enabled": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.suggest.preview": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.showStatusBar": true,
  "editor.acceptSuggestionOnEnter": "smart",

  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },

  "files.trimTrailingWhitespace": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "diffEditor.maxComputationTime": 5000,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.tree.indent": 20,
  "workbench.tree.renderIndentGuides": "always",
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": true,
  "editor.inlayHints.enabled": "on",
  "rust-analyzer.cargo.features": ["nalgebra", "ndarray"],
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/**",
    "/opt/homebrew/include",
    "/usr/local/opt/eigen/include/eigen3",
    "${workspaceFolder}/C/includes"
  ],
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "editor.semanticHighlighting.enabled": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "workbench.list.smoothScrolling": true,

  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/objects/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/target/**": true,
    "**/__pycache__/**": true,
    "**/env/**": true,
    "**/venv/**": true,
    "**/.gradle/**": true,
    "**/.mvn/**": true,
    "**/tmp/**": true,
    "**/.next/**": true,
    "**/.nuxt/**": true,
    "**/.svelte-kit/**": true,
    "**/.docker/**": true,
    "**/.kube/**": true
  },

  "editor.guides.highlightActiveIndentation": true,
  "terminal.integrated.enablePersistentSessions": true,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.scrollback": 10000,
  "git.mergeEditor": true,
  "git.openRepositoryInParentFolders": "always",
  "git.useIntegratedAskPass": true,
  "git.terminalAuthentication": true,
  "search.sortOrder": "modified",
  "workbench.editor.splitInGroupLayout": "horizontal",
  "debug.autoExpandLazyVariables": "on",
  "debug.javascript.autoAttachFilter": "smart",
  "python.analysis.indexing": true,
  "typescript.tsserver.maxTsServerMemory": 2048,
  "workbench.tree.expandMode": "doubleClick",
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  "testing.automaticallyOpenPeekView": "failureAnywhere",
  "testing.followRunningTest": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false
  },

  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "typescript.preferences.importModuleSpecifier": "shortest",
  "javascript.preferences.importModuleSpecifier": "shortest",
  "workbench.reduceMotion": "on",
  "workbench.list.horizontalScrolling": true,
  "files.restoreUndoStack": false,
  "workbench.enableExperiments": false,
  "editor.suggest.insertMode": "replace",
  "editor.suggest.filterGraceful": true,
  "editor.suggest.localityBonus": true,
  "testing.saveBeforeTest": true,
  "testing.gutterEnabled": true,
  "security.workspace.trust.enabled": true,
  "security.workspace.trust.banner": "always",
  "files.enableTrash": false,
  "workbench.startupEditor": "none",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "zenMode.hideLineNumbers": false,
  "zenMode.silentNotifications": true,
  "editor.maxTokenizationLineLength": 10000,
  "editor.unfoldOnClickAfterEndOfLine": false,
  "workbench.editor.closeOnFileDelete": true,
  "editor.snippetSuggestions": "top",
  "editor.selectionHighlight": false,
  "git.fetchOnPull": true,
  "git.showInlineOpenFileAction": false,

  "explorer.openEditors.visible": 1,
  "explorer.autoReveal": "focusNoScroll",

  "terminal.integrated.environmentChangesIndicator": "off",
  "terminal.integrated.showExitAlert": false,

  "terminal.integrated.env.linux": {
    "SSH_AUTH_SOCK": "/run/user/1000/ssh-agent.socket"
  },

  "typescript.disableAutomaticTypeAcquisition": true,
  "javascript.preferences.quoteStyle": "single",

  "python.analysis.packageIndexDepths": [
    {
      "name": "sklearn",
      "depth": 2
    },

    {
      "name": "matplotlib",
      "depth": 2
    },

    {
      "name": "scipy",
      "depth": 2
    },

    {
      "name": "pandas",
      "depth": 2
    }
  ],

  "window.restoreWindows": "none",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 8,
  "workbench.editor.limit.perEditorGroup": true,

  "python.analysis.diagnosticSeverityOverrides": {
    "reportPrivateImportUsage": "none",
    "reportGeneralTypeIssues": "warning",
    "reportOptionalMemberAccess": "information"
  },

  "terminal.integrated.profiles.osx": {
    "zsh (login)": {
      "path": "zsh",
      "args": ["-l"]
    },
    "bash": {
      "path": "bash",
      "args": ["-l"]
    }
  },

  "search.searchOnType": false,
  "search.searchOnTypeDebouncePeriod": 300,

  "git.confirmEmptyCommits": false,
  "git.untrackedChanges": "separate",

  "breadcrumbs.symbolSortOrder": "position",
  "breadcrumbs.symbolPath": "last",

  "settingsSync.keybindingsPerPlatform": false,
  "http.proxyStrictSSL": true,
  "update.mode": "manual",

  "window.titleBarStyle": "custom",
  "editor.stickyTabStops": true,

  "livePreview.portNumber": 3000,

  "[bibtex-style]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "James-Yu.latex-workshop",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  "github.gitAuthentication": true,

  "gitlens.advanced.messages": {
    "suppressGitMissingWarning": true
  },

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.requireConfig": true,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,

  "terminal.integrated.profiles.linux": {
    "zsh (login)": {
      "path": "zsh",
      "args": ["-l"]
    }
  },
  "terminal.integrated.defaultProfile.linux": "zsh (login)",
